<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <FrameLayout
                android:id="@+id/tab_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:background="@color/white"/>

        <RadioGroup
                android:id="@+id/tabs_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/thin_gray"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="6dp">

            <RadioButton
                    android:checked="true"
                    android:id="@+id/tab_rb_a"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:button="@null"
                    android:drawableTop="@drawable/tab_homepage_selector"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/str_homepage"
                    android:textColor="@drawable/txt_color_selector"
                    android:textSize="9sp"

            />

            <RadioButton
                    android:id="@+id/tab_rb_b"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:button="@null"
                    android:drawableTop="@drawable/tab_casehistory_selector"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/str_reservation"
                    android:textColor="@drawable/txt_color_selector"
                    android:textSize="9sp"

            />

            <RadioButton
                    android:id="@+id/tab_rb_c"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:button="@null"
                    android:drawableTop="@drawable/tab_friends_selector"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/str_message"
                    android:textColor="@drawable/txt_color_selector"
                    android:textSize="9sp"/>

            <RadioButton
                    android:id="@+id/tab_rb_d"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:button="@null"
                    android:drawableTop="@drawable/tab_mine_selector"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/str_mine"
                    android:textColor="@drawable/txt_color_selector"
                    android:textSize="9sp"
                    android:checked="true"
            />


        </RadioGroup>
    </LinearLayout>

</LinearLayout>